{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build workspace",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "go build -tags plugger_dynamic ./... && go build -tags plugger_dynamic,dynamicplugintesting -buildmode=plugin -o test/dynamicplugintesting/dynfoo/dynfooplug.so ./test/dynamicplugintesting/dynfoo/dynfooplug.go && echo 'Done'",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Run all tests with coverage",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "command": "go test -v -timeout 30s ./... -cover",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": "$go"
        },
        {
            "label": "View Go module documentation",
            "dependsOrder": "parallel",
            "dependsOn": [
                "pkgsite service",
                "view pkgsite"
            ],
            "problemMatcher": []
        },
        {
            "label": "view pkgsite",
            "command": "${input:pkgsite}",
        },
        {
            "label": "pkgsite service",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/pkgsite.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "close": true,
            }
        }
    ],
    "inputs": [
        {
            "id": "pkgsite",
            "type": "command",
            "command": "simpleBrowser.api.open",
            "args": "http://localhost:6060/github.com/thediveo/go-plugger/v2"
        }
    ]
}